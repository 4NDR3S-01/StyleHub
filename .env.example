# ============================================
# STYLEHUB ENVIRONMENT VARIABLES
# ============================================

# ============================================
# SUPABASE CONFIGURATION
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# STRIPE CONFIGURATION
# ============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ============================================
# PAYPAL CONFIGURATION
# ============================================
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # Change to 'live' for production

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_URL=https://your-domain.com
NODE_ENV=development

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@your-domain.com

# ============================================
# ANALYTICS & MONITORING
# ============================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn

# ============================================
# SECURITY & RATE LIMITING
# ============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
JWT_SECRET=your_jwt_secret_key_here

# ============================================
# STORAGE CONFIGURATION
# ============================================
NEXT_PUBLIC_STORAGE_URL=https://your-project.supabase.co/storage/v1
STORAGE_BUCKET=productos
AVATAR_BUCKET=avatar

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_PAYPAL=true
NEXT_PUBLIC_ENABLE_STRIPE=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_WISHLIST=true

# ============================================
# BUSINESS CONFIGURATION
# ============================================
NEXT_PUBLIC_STORE_NAME=StyleHub
NEXT_PUBLIC_STORE_DESCRIPTION=Tu tienda de moda online
NEXT_PUBLIC_CONTACT_EMAIL=soporte@your-domain.com
NEXT_PUBLIC_CONTACT_PHONE=+57-1-XXX-XXXX

# ============================================
# SHIPPING & TAXES
# ============================================
DEFAULT_SHIPPING_COST=5000
DEFAULT_TAX_RATE=0.16
FREE_SHIPPING_THRESHOLD=100000

# ============================================
# SOCIAL MEDIA
# ============================================
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/your-store
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/your-store
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/your-store

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Uncomment for development
# NEXT_PUBLIC_MOCK_DATA=true
# NEXT_PUBLIC_DEBUG_MODE=true

# ============================================
# PRODUCTION ONLY
# ============================================
# Uncomment for production
# NODE_ENV=production
# NEXT_PUBLIC_ANALYTICS_ENABLED=true
# NEXT_PUBLIC_SENTRY_ENABLED=true 